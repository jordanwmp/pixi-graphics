{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ES2022",
        "target": "ES2017",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src",
        "types"
    ]
}
